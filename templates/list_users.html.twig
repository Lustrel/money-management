
{% use "bootstrap_4_layout.html.twig" %}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Money Management v0.01a - Cadastro de Empr√©stimo{% endblock %}</title>
    {% block stylesheets %}<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">{% endblock %}

</head>
<body class="text-center">

{% block body %}

    {% block header %}
        {{ parent() }}
    {% endblock header %}
<div class="container">
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>
    <table class="table" align="center">
        <thead>
        <tr>
            {# sorting of properties based on query components #}
            <th scope="col">{{ knp_pagination_sortable(pagination, 'Id', 'id') }}</th>
            <th scope="col" {% if pagination.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nome', 'name') }}</th>
            <th scope="col">{{ knp_pagination_sortable(pagination, 'Data de Cadastro', ['dueDate']) }}</th>
        </tr>
        </thead>
        {# table body #}
        {% for user in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.dueDate | date('d-m-Y') }}</td>
            </tr>
        {% endfor %}
    </table>
    {# display navigation #}
    <div align="center">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

</div>


    {% block footer %}
        {{ parent() }}
    {% endblock footer %}



{% endblock %}

{% block javascripts %}{% endblock %}
</body>
</html>
