{% extends "base.html.twig" %}

{% block title %}
    {{ parent() ~ 'Clientes' }}
{% endblock %}


{% block body %}
    <div class="container">
        {% for flash_message in app.session.flashbag.get('notice') %}
            {{flash_message}}
        {% endfor %}
        <div class="row">
            <div class="col">
                <h1 class="text-center">Listagem de clientes</h1>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <a class="btn btn-primary" href="/create_customer">Adicionar</a>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Vendedor</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Doc.Numero</th>
                            <th scope="col">Email</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for customer in customers %}
                            <tr>
                                <th scope="row">{{ customer.id }}</th>
                                <td>{{customer.user.name}}</td>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.documentnumber }}</td>
                                <td>{{ customer.email }}</td>
                                <td>{{ customer.phone }}</td>
                                <td>
                                    <a class="btn btn-secondary btn-sm" href="/edit_customer/{{ customer.id }}">Editar</a>
                                    <a class="btn btn-danger btn-sm" href="/remove_customer/{{ customer.id }}">Remover</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}