{% extends "base.html.twig" %}

{% block title %}
    {{ parent() ~ 'Empréstimos' }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-center">Listagem de empréstimos</h1>
            </div>
        </div>

        <div class="row">
            <div class="col">
                {% if loggedUser is defined and loggedUser.administrator %}
                    <a class="btn btn-primary" href="/create_loan">Adicionar</a>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Periodo de pagamento</th>
                        <th scope="col">Valor emprestado</th>
                        <th scope="col">Qtd. Parcelas</th>
                        <th scope="col">Juros</th>
                        <th scope="col">Desconto</th>
                        <th scope="col">Valor total</th>
                        {% if loggedUser is defined and loggedUser.administrator %}
                            <th scope="col">Ações</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for loan in loans %}
                        <tr>
                            <th scope="row">{{ loan.id }}</th>
                            <td>{{ loan.customer.name }}</td>
                            <td>{{ loan.installmentperiod.name }}</td>
                            <td>{{ 'R$ ' ~ loan.borrowedvalue }}</td>
                            <td>{{ loan.totalinstallments }}</td>
                            <td>{{ loan.monthlyfee ~ '%' }}</td>
                            <td>{{ loan.discount ~ '%' }}</td>
                            <td>{{ 'R$ ' ~ loan.borrowedvalue * (1 + (loan.monthlyfee / 100)) }}</td>
                            {% if loggedUser is defined and loggedUser.administrator %}
                                <td>
                                    <a class="btn btn-secondary btn-sm" href="/edit_loan/{{ loan.id }}">Editar</a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}